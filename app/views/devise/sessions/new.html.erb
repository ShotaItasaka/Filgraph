<div class="container">
  <div class="row no-gutters">
   <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center rounded px-0 my-5">
    <h2 class="text-dark py-4 mb-0">ログイン</h2>
      <div class="form-body p-4">
        <div class="mx-auto text-center">
         <p>メールアドレスとパスワードを入力してください</p>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
           <div class="input-group mb-3">
            <div class="input-group-prepend">
             <span class="input-group-text" aria-hidden="true"><i class="fas fa-envelope"></i></span>
            </div>
            <%= f.email_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"メールアドレス" %>
           </div>
          
           <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
            </div>
            <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"パスワード" %>
           </div>
            <%= f.submit "ログイン", class:"btn btn-lg btn-block btn-info mt-5" %>
            <%= link_to "会員登録", new_user_registration_path, class:"btn btn-lg btn-block btn-outline-info mt-5" %>
            <p class="help-block">アカウトをお持ちでない方</p>
        <% end %>
      </div>
   </div>
  </div>
</div>
