<div class="container">
  <div class="row no-gutters">
   <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center rounded px-0 my-5">
    <h2 class="text-dark py-4 mb-0 text-center">会員登録</h2>
     <div class="form-body p-4">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
       <table class="table table-borderless text-nowrap ">
        <thead>
         <tr>
          <th scope="col"></th>
          <th scope="col"></th>
          <th scope="col"></th>
         </tr>
        </thead>
        <tbody>
        <tr>
         <th scope="row">お名前</th>
          <td><%= f.text_field :last_name, autofocus: true, placeholder:"姓"%></td>
          <td><%= f.text_field :first_name, autofocus: true, placeholder:"名" %></td>
        </tr>

        <tr>
         <th scope="row">フリガナ</th>
          <td><%= f.text_field :last_name_kana, autofocus: true, :placeholder =>"セイ" %></td>
          <td><%= f.text_field :first_name_kana, autofocus: true, :placeholder =>"メイ" %></td>
        </tr>
          
       <tr>
        <th scope="row">郵便番号</th>
        <td><%= f.text_field :postcode, autofocus: true , :placeholder =>"1234567" %></td>
       </tr>
      
       <tr>
        <th scope="row">住所</th>
        <td><%= f.text_field :address, autofocus: true, :placeholder =>"" %></td>
       </tr>
      
       <tr>
        <th scope="row">電話番号</th>
        <td><%= f.text_field :telephone_number, autofocus: true, :placeholder =>"090XXXXXXXX" %></td>
       </tr>
      
        <tr>
          <th scope="row">メールアドレス</td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        
        <tr>
          <th scope="row">パスワード
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %></td>
          </th>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
        
        <tr>
          <th scope="row">パスワード再入力</th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
        
        <td><%= f.submit "会員登録", class:"btn btn-lg btn-block btn-info mt-5" %></td>
        </tbody>
       </table>
      <% end %>
     </div>
   </div>
  </div>
</div>
<%= render "devise/shared/links" %>
